@{
    ViewData["Title"] = "Projetos";
}

<section class="projects-section">
    <div class="container">
        <div class="projects-filter">
            <button class="filter-btn active" data-filter="all">Todos</button>
            <button class="filter-btn" data-filter="web">Web Apps</button>
            <button class="filter-btn" data-filter="api">APIs</button>
            <button class="filter-btn" data-filter="microservices">Microsserviços</button>
        </div>

        <div class="projects-grid">
            <div class="project-card" data-category="mobile">
                <div class="project-image">
                    <img src="~/images/project1.jpg" alt="Regra de Três App">
                </div>
                <div class="project-info">
                    <h3>Aplicativo Regra de Três</h3>
                    <p>Kotlin</p>
                    <div class="project-links">
                        <a href="https://github.com/maikelkr/regra_de_tres_apk" target="_blank" class="btn btn-outline">Detalhes</a>
                    </div>
                </div>
            </div>
            <div class="project-card" data-category="mobile">
                <div class="project-image">
                    <img src="~/images/project1.jpg" alt="Consum.io App">
                </div>
                <div class="project-info">
                    <h3>Aplicativo para controle de consumo de combustível de veículos</h3>
                    <p>Kotlin, Firebase Firestore</p>
                    <div class="project-links">
                        <a href="https://github.com/maikelkr/consum.io" target="_blank" class="btn btn-outline">Detalhes</a>
                    </div>
                </div>
            </div>
            <div class="project-card" data-category="api">
                <div class="project-image">
                    <img src="~/images/project2.jpg" alt="API de Pagamentos">
                </div>
                <div class="project-info">
                    <h3>API de Pagamentos</h3>
                    <p>.NET 6, Dapper, JWT Authentication, Redis</p>
                    <div class="project-links">
                        <a href="#" class="btn btn-outline">Detalhes</a>
                    </div>
                </div>
            </div>

            <!-- Add more projects as needed -->
        </div>
    </div>
</section>